enum TimePreference {
  Morning
  Afternoon
  Evening
}

enum TrainingForDistance {
  FiveK
  TenK
  HalfMarathon
  Marathon
  Ultra
}

enum WorkoutFormat {
  Continuous
  WarmupMainCooldown
  Progression
  IntervalsUnstructured
}

enum WorkoutType {
  Easy
  Tempo
  Intervals
  LongRun
  Speed
  Strength
}
